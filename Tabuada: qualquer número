programa
{
	
/*
	*  Escrever um algoritmo que leia um valor para uma variável N de 1 a 10 e calcule a tabuada de  N. 
	*  Mostre a tabuada na forma: 0 x N = 0, 1 x N = 1N, 2 x N = 2N, ..., 10 x N = 10N. 
	*/
  
	funcao inicio()
	{
		inteiro numero
    
		escreva("Digite o número que deseja calcular a tabuada: ")
			leia(numero)  // Pede o número para saber qual tabuada será calculada.
      
		para(inteiro contador = 1; contador<= 10; contador++){
			escreva("\n", numero, " x ", contador, " = ", (numero*contador))// O contador começa com 1 porque todo número multiplicado por 0 é = 0.
                                                                      // Sempre que terminar uma leitura da estrutura e voltar para o início, será somado +1 na variável.
		}
    
	}
}
